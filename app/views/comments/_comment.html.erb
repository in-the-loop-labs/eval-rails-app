<div class="card mb-2" id="comment-<%= comment.id %>">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <div>
        <strong><%= comment.user.name %></strong>
        <small class="text-muted ms-2"><%= time_ago_in_words(comment.created_at) %> ago</small>
      </div>
      <% if policy(comment).update? %>
        <div class="btn-group btn-group-sm">
          <%= link_to "Edit", edit_project_task_comment_path(@project, @task, comment), class: "btn btn-outline-secondary btn-sm" %>
          <%= button_to "Delete", project_task_comment_path(@project, @task, comment), method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: "Delete this comment?" } %>
        </div>
      <% end %>
    </div>
    <div class="mt-2 comment-body">
      <%= format_comment_body(comment.body).html_safe %>
    </div>
  </div>
</div>
